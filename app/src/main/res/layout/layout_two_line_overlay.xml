<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000">

    <!-- Helper Text -->
    <TextView
        android:id="@+id/helper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Place Green Line at START of text.\nClick NEXT to scroll."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="#80000000"
        android:layout_marginBottom="100dp"/>

    <!-- Top Line (Start of Selection) - Green -->
    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#4CAF50"
        android:layout_marginTop="200dp" />

    <!-- Visual Handle for Top Line -->
    <ImageView
        android:id="@+id/handle_top"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:layout_alignTop="@id/line_top"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-14dp"
        android:contentDescription="Drag Handle"
        android:tint="#4CAF50"/>

    <!-- Bottom Line (End of Selection) - Red -->
    <!-- Initially GONE -->
    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#F44336"
        android:layout_marginTop="400dp"
        android:visibility="gone"/>

    <!-- Visual Handle for Bottom Line -->
    <!-- Initially GONE -->
    <ImageView
        android:id="@+id/handle_bottom"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:layout_alignTop="@id/line_bottom"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-14dp"
        android:contentDescription="Drag Handle"
        android:tint="#F44336"
        android:visibility="gone"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:gravity="end">

        <!-- Dynamic Action Button (Next -> Stop -> Copy) -->
        <Button
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textStyle="bold"
            android:backgroundTint="?android:attr/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="@android:drawable/btn_default"
            android:contentDescription="Close Overlay"/>

    </LinearLayout>

</RelativeLayout>